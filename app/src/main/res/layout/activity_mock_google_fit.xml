<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.hapadim.MockGoogleFit">'


    <TextView
        android:text="steps"
        android:textSize="100dp"
        android:id="@+id/count_of_steps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/start_step_count_mock_button"
        android:text="Start Step Count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="startService"/>
    <Button
        android:id="@+id/stop_step_count_mock_button"
        android:text="Stop Step Count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="stopService"/>

</LinearLayout>
