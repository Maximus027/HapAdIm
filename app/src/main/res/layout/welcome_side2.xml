<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_screen2"
    android:orientation="vertical"
    android:paddingBottom="30dp"
    android:paddingTop="30dp">

    <ImageView
        android:id="@+id/threeCatergoriesText"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center_horizontal"
        android:src="@drawable/threecat"
        android:textColor="@color/black"
        android:textSize="30dp" />

    <LinearLayout
        android:id="@+id/mountLayout"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/threeCatergoriesText"
        android:orientation="vertical">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="55dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/mountainicon" />

        <ImageView
            android:id="@+id/mountText"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:src="@drawable/mounttext" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/monumentLayout"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="140dp">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="55dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/monumenticon" />

        <ImageView
            android:id="@+id/monumentText"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="30dp"
            android:src="@drawable/monumenttext" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/distanceLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="140dp">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="55dp"
            android:layout_marginBottom="@dimen/cardViewMargin"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/walkicon" />


        <ImageView
            android:id="@+id/distanceText"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="@dimen/cardViewMargin"
            android:src="@drawable/distancetext" />
    </LinearLayout>

</LinearLayout>