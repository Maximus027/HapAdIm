<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popUpCard"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:layout_margin="50dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/popUpLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/congratsText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:src="@drawable/congratulations" />

        <TextView
            android:id="@+id/greatJob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="GREAT JOB"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/howText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="For taking the first step to the top.
  You've GOT the Journey To Freedom Badge" />

        <ImageView
            android:id="@+id/popUpbadgeImage"
            android:layout_width="130dp"
            android:layout_height="126dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitXY"
            android:src="@drawable/journey" />


    </LinearLayout>
</android.support.v7.widget.CardView>